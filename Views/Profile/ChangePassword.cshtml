@model ContactsManagement.DTOs.Profile.ChangePasswordDTO
@using System.Security.Claims

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userName = User.Identity.Name ?? "User";
    var firstLetter = userName.Trim().FirstOrDefault().ToString().ToUpper();
    var avatarPath = User.FindFirst("AvatarPath")?.Value;
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<style>
    /* ... (Giữ nguyên style cũ) ... */
    .profile-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        min-height: 600px;
        border: none;
    }

        .profile-card .profile-sidebar {
            background-color: #f9fafb;
            padding: 30px 20px;
            border-right: 1px solid #e5e7eb;
        }

        .profile-card .sidebar-avatar-placeholder {
            width: 40px;
            height: 40px;
            background-color: #7c3aed;
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 1rem;
            font-size: 18px;
        }

        .profile-card .nav-pills .nav-link {
            color: #4b5563;
            font-weight: 500;
            padding: 10px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .profile-card .nav-pills .nav-link:hover {
                background-color: #e5e7eb;
                color: #111827;
            }

            .profile-card .nav-pills .nav-link.active {
                background-color: #e0e7ff;
                color: #4f46e5;
                font-weight: 700;
            }

            .profile-card .nav-pills .nav-link i {
                width: 24px;
                margin-right: 8px;
                color: #9ca3af;
            }

            .profile-card .nav-pills .nav-link.active i {
                color: #4f46e5;
            }

        .profile-card .sidebar-heading {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #9ca3af;
            font-weight: 700;
            margin: 25px 0 10px 15px;
        }

        .profile-card .profile-header-wrapper {
            padding: 20px 30px;
            border-bottom: 1px solid #e5e7eb;
        }

        .profile-card .profile-header-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            margin: 0;
        }

        /* Style Input & Button */
        .profile-card .form-group label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .profile-card .custom-input {
            height: 45px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            background-color: #fff !important;
            color: #111827;
            font-weight: 500;
            padding-left: 15px;
        }

            .profile-card .custom-input:focus {
                border-color: #8b5cf6;
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
            }

            .profile-card .custom-input.input-validation-error {
                border-color: #dc3545;
                background-color: #fff8f8 !important;
            }

        .profile-card .btn-purple {
            background-color: #7c3aed;
            border-color: #7c3aed;
            color: white;
            font-weight: 500;
            padding: 8px 20px;
            border-radius: 6px;
        }

            .profile-card .btn-purple:hover {
                background-color: #6d28d9;
                color: white;
            }

        .profile-card .btn-white {
            background-color: white;
            border: 1px solid #d1d5db;
            color: #374151;
            font-weight: 500;
            padding: 8px 20px;
            border-radius: 6px;
        }

            .profile-card .btn-white:hover {
                background-color: #f9fafb;
            }

        .profile-card .text-danger {
            color: #dc3545 !important;
            font-size: 0.875em;
            margin-top: 5px;
            display: block;
        }

    /* CSS MỚI: Toggle Password Icon */
    .password-wrapper {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #9ca3af;
        z-index: 10;
        font-size: 1.1rem;
    }

        .toggle-password:hover {
            color: #4b5563;
        }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert" style="border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert" style="border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <i class="fas fa-exclamation-circle mr-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row justify-content-center">
    <div class="col-md-11 col-xl-10">
        <div class="profile-card d-flex flex-wrap">

            <div class="col-md-3 profile-sidebar">
                <div class="d-flex align-items-center mb-4 pl-2">
                    @if (!string.IsNullOrEmpty(avatarPath))
                    {
                        <img src="@avatarPath?v=@DateTime.Now.Ticks" class="rounded-circle mr-3" style="width: 40px; height: 40px; object-fit: cover;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="sidebar-avatar-placeholder" style="display:none;">@firstLetter</div>
                    }
                    else
                    {
                        <div class="sidebar-avatar-placeholder">@firstLetter</div>
                    }
                    <div style="line-height: 1.2;">
                        <div class="font-weight-bold text-dark">@userName</div>
                        <small class="text-muted">Cài đặt</small>
                    </div>
                </div>
                <div class="nav flex-column nav-pills">
                    <div class="sidebar-heading">Tài khoản</div>
                    <a asp-action="Index" asp-controller="Profile" class="nav-link @(currentAction == "Index" ? "active" : "")"><i class="far fa-user"></i> Hồ sơ cá nhân</a>
                    <a asp-action="ChangePassword" asp-controller="Profile" class="nav-link @(currentAction == "ChangePassword" ? "active" : "")"><i class="fas fa-lock"></i> Mật khẩu</a>
                </div>
            </div>

            <div class="col-md-9 profile-content p-0">
                <div class="profile-header-wrapper">
                    <h2 class="profile-header-title">@ViewData["Title"]</h2>
                </div>

                <div class="p-4">

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Mật khẩu hiện tại</label>
                                    <div class="password-wrapper">
                                        <input asp-for="OldPassword" type="password" class="form-control custom-input" placeholder="Nhập mật khẩu đang sử dụng">
                                        <i class="fas fa-eye toggle-password" onclick="togglePassword(this)"></i>
                                    </div>
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mt-3">
                                <div class="form-group">
                                    <label>Mật khẩu mới</label>
                                    <div class="password-wrapper">
                                        <input asp-for="NewPassword" type="password" class="form-control custom-input" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)">
                                        <i class="fas fa-eye toggle-password" onclick="togglePassword(this)"></i>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12 mt-3">
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu mới</label>
                                    <div class="password-wrapper">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control custom-input" placeholder="Nhập lại mật khẩu mới">
                                        <i class="fas fa-eye toggle-password" onclick="togglePassword(this)"></i>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-5">

                        <div class="d-flex justify-content-end align-items-center">
                            <a asp-action="Index" class="btn btn-white mr-2">
                                <i class="fas fa-times mr-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-purple px-4">
                                <i class="fas fa-save mr-2"></i> Cập nhật mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm ẩn/hiện mật khẩu
        function togglePassword(icon) {
            var input = icon.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // Tự động tắt thông báo alert sau 3 giây
        // Đặt timeout trễ 1 chút để đảm bảo DOM đã load xong
        $(document).ready(function() {
            window.setTimeout(function () {
                $(".alert-success, .alert-danger").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 3000);
        });
    </script>
}