@model ContactsManagement.DTOs.Auth.LoginDTO
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* --- 1. BACKGROUND STYLE (Giống hệt trang Đăng ký) --- */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            /* Mesh Gradient Background */
            background-color: #a0c4ff;
            background-image: radial-gradient(at 0% 0%, hsla(253,16%,7%,0) 0, transparent 50%), radial-gradient(at 50% 0%, hsla(225,39%,30%,0) 0, transparent 50%), radial-gradient(at 100% 0%, hsla(339,49%,30%,0) 0, transparent 50%);
            background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
            overflow-x: hidden;
        }

        /* --- 2. LOGIN CARD --- */
        .login-card {
            background: #ffffff;
            width: 90%;
            /* Form đăng nhập ít trường hơn nên để max-width nhỏ hơn chút cho cân đối */
            max-width: 550px;
            border-radius: 20px;
            padding: 2.5rem 3rem;
            box-shadow: 0 20px 60px rgba(0, 50, 100, 0.15);
            position: relative;
            z-index: 10;
        }

        /* --- 3. HEADER --- */
        .header-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo {
            font-weight: 800;
            font-size: 1.1rem;
            color: #4facfe;
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
            display: inline-block;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
        }

        .sub-text {
            color: #6c757d;
            font-size: 0.95rem;
            margin-top: 0.5rem;
        }

        /* --- 4. FORM ELEMENTS --- */
        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #333;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px; /* Input cao, thoáng */
            font-size: 1rem;
            border: 1.5px solid #eef0f3;
            border-radius: 10px;
            background-color: #fcfcfd;
            transition: all 0.3s ease;
            box-sizing: border-box;
            color: #333;
            font-family: 'Inter', sans-serif;
        }

            .form-control:focus {
                outline: none;
                border-color: #4facfe;
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(79, 172, 254, 0.1);
            }

        /* --- 5. BUTTON --- */
        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 1rem;
            box-shadow: 0 10px 20px rgba(79, 172, 254, 0.3);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 25px rgba(79, 172, 254, 0.4);
                background: linear-gradient(to right, #439cfb 0%, #00d2fe 100%);
            }

        /* --- 6. UTILS & VALIDATION --- */
        .text-danger {
            color: #ff4757;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .input-validation-error {
            border-color: #ff4757 !important;
            background-color: #fff5f5;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0 0 1rem 0;
            color: #ff4757;
            text-align: center;
            background: #fff5f5;
            border: 1px solid #ff4757;
            border-radius: 8px;
            padding: 10px;
            font-size: 0.9rem;
        }

        /* Link đăng ký & Quên MK */
        .form-footer {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 0.9rem;
            color: #666;
        }

            .form-footer a {
                color: #4facfe;
                font-weight: 600;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }

        /* Thông báo thành công (từ trang Đăng ký chuyển sang) */
        .alert-success {
            background-color: #d1e7dd;
            color: #0f5132;
            border: 1px solid #badbcc;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            text-align: center;
            font-size: 0.9rem;
        }

        /* Checkbox Remember Me */
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            color: #555;
            cursor: pointer;
        }

            .remember-me input {
                margin-right: 8px;
                width: 16px;
                height: 16px;
                accent-color: #4facfe;
            }

        @@media (max-width: 576px) {
            .login-card {
                padding: 2rem;
                width: 95%;
            }
        }
    </style>
</head>
<body>

    <div class="login-card">

        <div class="header-section">
            <div class="brand-logo"><i class="fas fa-address-book"></i> Contacts Manager</div>
            <h2>Chào mừng trở lại!</h2>
            <p class="sub-text">Vui lòng nhập thông tin để đăng nhập.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="name@email.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="******">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-options">
                <label class="remember-me">
                    <input type="checkbox" name="RememberMe" value="true"> Ghi nhớ đăng nhập
                </label>
                <a href="#" style="color: #4facfe; text-decoration: none; font-weight: 500;">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-login">Đăng Nhập</button>

            <div class="form-footer">
                Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>