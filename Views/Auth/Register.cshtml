@model ContactsManagement.DTOs.Auth.RegisterDTO
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* --- 1. BACKGROUND STYLE (Giống mẫu) --- */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            /* Tạo nền Gradient pha trộn (Mesh Gradient) */
            background-color: #a0c4ff; /* Màu nền dự phòng */
            background-image: radial-gradient(at 0% 0%, hsla(253,16%,7%,0) 0, transparent 50%), radial-gradient(at 50% 0%, hsla(225,39%,30%,0) 0, transparent 50%), radial-gradient(at 100% 0%, hsla(339,49%,30%,0) 0, transparent 50%);
            /* Lớp phủ màu Pastel xanh/tím loang lổ */
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            /* Hoặc dùng cái này để giống ảnh mẫu hơn (Xanh dương đậm dần) */
            background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
            overflow-x: hidden; /* Tránh thanh cuộn ngang */
        }

            /* Hiệu ứng bóng mờ (Blur) đè lên background để tạo cảm giác mịn */
            body::before {
                content: "";
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 50%);
                pointer-events: none;
            }

        /* --- 2. CONTAINER (Cái Card trắng) --- */
        .register-card {
            background: #ffffff;
            width: 90%; /* Chiếm 90% chiều ngang màn hình mobile */
            max-width: 600px; /* RỘNG HƠN: Giới hạn tối đa 750px (Form to hơn) */
            border-radius: 24px; /* Bo góc to như mẫu */
            padding: 3rem 4rem; /* Padding dày để nội dung thoáng */
            /* Đổ bóng mềm mại, sang trọng */
            box-shadow: 0 20px 60px rgba(0, 50, 100, 0.15);
            position: relative;
            z-index: 10;
        }

        /* --- 3. TYPOGRAPHY & HEADER --- */
        .header-section {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .brand-logo {
            font-weight: 800;
            font-size: 1.2rem;
            color: #4facfe; /* Màu xanh logo */
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-bottom: 1rem;
            display: inline-block;
        }

        h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0 0 0.5rem 0;
        }

        .sub-text {
            color: #6c757d;
            font-size: 0.95rem;
        }

        /* --- 4. FORM ELEMENTS --- */
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #333;
            font-size: 0.9rem;
        }

        .input-wrapper {
            position: relative;
        }

        /* Style ô input */
        .form-control {
            width: 100%;
            padding: 14px 16px; /* Ô input cao hơn */
            padding-left: 16px;
            font-size: 1rem;
            border: 1.5px solid #eef0f3; /* Viền xám rất nhạt */
            border-radius: 12px; /* Bo góc input */
            background-color: #fcfcfd;
            transition: all 0.3s ease;
            box-sizing: border-box;
            color: #333;
            font-family: 'Inter', sans-serif;
        }

            .form-control:focus {
                outline: none;
                border-color: #4facfe; /* Viền xanh khi focus */
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(79, 172, 254, 0.1); /* Hiệu ứng glow nhẹ */
            }

        /* Placeholder màu nhạt */
        ::placeholder {
            color: #adb5bd;
        }

        /* --- 5. BUTTON (Nút Đăng Ký) --- */
        .btn-register {
            width: 100%;
            padding: 16px;
            background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%); /* Gradient xanh dương */
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 1rem;
            box-shadow: 0 10px 20px rgba(79, 172, 254, 0.3);
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 25px rgba(79, 172, 254, 0.4);
                background: linear-gradient(to right, #439cfb 0%, #00d2fe 100%);
            }

        /* --- 6. VALIDATION & UTILS --- */
        .text-danger {
            color: #ff4757;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .input-validation-error {
            border-color: #ff4757 !important;
            background-color: #fff5f5;
        }

        .login-redirect {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.95rem;
            color: #666;
        }

            .login-redirect a {
                color: #4facfe;
                font-weight: 600;
                text-decoration: none;
            }

                .login-redirect a:hover {
                    text-decoration: underline;
                }

        /* Bố cục 2 cột cho Desktop để form nhìn rộng và thoáng hơn */
        @@media (min-width: 768px) {
            .row-inputs {
                display: flex;
                gap: 20px;
            }

            .col-half {
                flex: 1;
            }

            .register-card {
                /* Nếu màn hình nhỏ thì padding ít lại chút */
                padding: 3rem 4rem;
            }
        }

        @@media (max-width: 767px) {
            .register-card {
                padding: 2rem;
                width: 95%;
            }
        }
    </style>
</head>
<body>

    <div class="register-card">

        <div class="header-section">
            <div class="brand-logo"><i class="fas fa-address-book"></i> Contacts Manager</div>
            <h2>Tạo tài khoản mới</h2>
            <p class="sub-text">Chào mừng bạn! Hãy điền thông tin bên dưới để bắt đầu.</p>
        </div>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger" style="text-align:center; margin-bottom:1rem;"></div>

            <div class="form-group">
                <label asp-for="FullName" class="form-label">Họ và tên</label>
                <div class="input-wrapper">
                    <input asp-for="FullName" class="form-control" placeholder="Ví dụ: Nguyễn Văn A">
                </div>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Địa chỉ Email</label>
                <div class="input-wrapper">
                    <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="row-inputs">
                <div class="form-group col-half">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <div class="input-wrapper">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu...">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group col-half">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-wrapper">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn-register">Đăng Ký Tài Khoản</button>

            <div class="login-redirect">
                Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

