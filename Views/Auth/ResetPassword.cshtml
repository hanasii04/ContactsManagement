@model ContactsManagement.DTOs.Auth.ResetPasswordDTO

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null; /* Ngắt layout chính */
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* --- 1. BACKGROUND STYLE (GIỮ NGUYÊN) --- */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #a0c4ff;
            background-image: radial-gradient(at 0% 0%, hsla(253,16%,7%,0) 0, transparent 50%), radial-gradient(at 50% 0%, hsla(225,39%,30%,0) 0, transparent 50%), radial-gradient(at 100% 0%, hsla(339,49%,30%,0) 0, transparent 50%);
            background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
            overflow-x: hidden;
        }

        /* --- 2. CARD STYLE --- */
        .login-card {
            background: #ffffff;
            width: 90%;
            max-width: 500px;
            border-radius: 20px;
            padding: 2.5rem 3rem;
            box-shadow: 0 20px 60px rgba(0, 50, 100, 0.15);
            position: relative;
            z-index: 10;
        }

        /* --- 3. HEADER --- */
        .header-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
        }

        .sub-text {
            color: #6c757d;
            font-size: 0.95rem;
            margin-top: 0.5rem;
        }

        /* --- 4. FORM ELEMENTS --- */
        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #333;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            font-size: 1rem;
            border: 1.5px solid #eef0f3;
            border-radius: 10px;
            background-color: #fcfcfd;
            transition: all 0.3s ease;
            box-sizing: border-box;
            color: #333;
            font-family: 'Inter', sans-serif;
        }

            .form-control:focus {
                outline: none;
                border-color: #4facfe;
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(79, 172, 254, 0.1);
            }

        /* --- 5. BUTTON --- */
        .btn-primary-custom {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 1rem;
            box-shadow: 0 10px 20px rgba(79, 172, 254, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 25px rgba(79, 172, 254, 0.4);
                background: linear-gradient(to right, #439cfb 0%, #00d2fe 100%);
            }

        /* --- 6. UTILS --- */
        .text-danger {
            color: #ff4757;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .input-validation-error {
            border-color: #ff4757 !important;
            background-color: #fff5f5;
        }

        /* Icon Wrapper */
        .icon-wrapper {
            width: 60px;
            height: 60px;
            background-color: #e0f2fe;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem auto;
            color: #4facfe;
            font-size: 1.5rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="login-card">

        <div class="header-section">
            <div class="icon-wrapper">
                <i class="fas fa-key"></i>
            </div>
            <h2>Đặt lại mật khẩu</h2>
            <p class="sub-text">Vui lòng nhập mật khẩu mới cho tài khoản của bạn.</p>
        </div>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null && ViewData.ModelState[string.Empty].Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle mr-1"></i> @Html.ValidationSummary(true)
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                <div style="position: relative;">
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="******">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="******">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-custom">
                <i class="fas fa-save mr-2"></i> Lưu mật khẩu
            </button>

            <div style="text-align: center; margin-top: 1.5rem;">
                <a asp-action="Login" asp-controller="Auth" style="color: #6c757d; text-decoration: none; font-size: 0.9rem; font-weight: 500;">
                    Hủy bỏ
                </a>
            </div>
        </form>
    </div>

    @* Script để Validate Client-side (So khớp 2 mật khẩu ngay lập tức) *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>