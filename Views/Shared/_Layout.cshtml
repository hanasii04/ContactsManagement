@using System.Security.Claims
@{
    // 1. Lấy Controller hiện tại để active menu
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

    // 2. Lấy Avatar và Tên từ Claim
    var userAvatar = User.FindFirst("AvatarPath")?.Value;
    var userName = User.Identity.Name ?? "U";

    // Logic lấy chữ cái đầu (để làm Avatar mặc định nếu chưa có ảnh)
    var firstLetter = !string.IsNullOrEmpty(userName) ? userName.Trim().Substring(0, 1).ToUpper() : "U";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Contact Pro</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,600,700&display=fallback">
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        /* 1. NỀN TRANG: Màu xám xanh nhẹ */
        body, .content-wrapper {
            background-color: #f4f6f9 !important;
            font-family: 'Source Sans Pro', sans-serif;
        }

        /* 2. SIDEBAR */
        .main-sidebar {
            background-color: #ffffff !important;
            box-shadow: 0 0 20px rgba(0,0,0,0.05) !important;
            border-right: none;
        }

        .brand-link {
            border-bottom: 1px solid #f0f0f0 !important;
        }

        /* ĐỔI MÀU LOGO SANG XANH DƯƠNG */
        .brand-text {
            color: #007bff !important;
            font-weight: 800 !important;
            letter-spacing: 1px;
        }

        /* 3. MENU ITEM */
        .nav-sidebar .nav-link {
            border-radius: 10px !important;
            color: #5a6268;
            font-weight: 600;
            padding: 10px 15px;
            transition: all 0.3s;
        }

            .nav-sidebar .nav-link:hover {
                background-color: rgba(0, 123, 255, 0.1) !important;
                color: #007bff !important;
            }

            /* ACTIVE STATE: MÀU XANH DƯƠNG */
            .nav-sidebar .nav-link.active {
                background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
                color: #ffffff !important;
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3) !important;
                border: none;
            }

        .nav-sidebar .nav-icon {
            font-size: 1.1rem;
            margin-right: 10px;
        }

        /* CSS MỚI: Avatar chữ cái (Placeholder) ở Sidebar */
        .user-panel .avatar-placeholder {
            width: 34px;
            height: 34px;
            background-color: #7c3aed; /* Màu xanh dương (hoặc #7c3aed nếu thích tím) */
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-size: 16px;
            user-select: none;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-light bg-white border-bottom-0">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">
                        <i class="fas fa-sign-out-alt mr-1"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-light-primary elevation-0">
            <a href="/" class="brand-link">
                <img src="~/adminlte/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text">MyContact</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex align-items-center" style="border-bottom: 1px solid #f0f0f0;">
                    <div class="image">
                        @if (!string.IsNullOrEmpty(userAvatar))
                        {
                            <img src="@userAvatar" class="img-circle elevation-1" style="width: 34px; height: 34px; object-fit: cover;" alt="User Image">
                        }
                        else
                        {
                            <div class="avatar-placeholder elevation-1">
                                @firstLetter
                            </div>
                        }
                    </div>
                    <div class="info">
                        <a href="#" class="d-block font-weight-bold text-dark">
                            @(User.Identity.IsAuthenticated ? User.Identity.Name : "Khách")
                        </a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index"
                               class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                                <i class="nav-icon fas fa-home"></i>
                                <p>Tổng quan</p>
                            </a>
                        </li>

                        <li class="nav-header text-uppercase font-weight-bold text-muted mt-3" style="font-size: 12px;">Quản lý</li>

                        <li class="nav-item">
                            <a asp-controller="Contacts" asp-action="Index"
                               class="nav-link @(currentController == "Contacts" ? "active" : "")">
                                <i class="nav-icon fas fa-address-book"></i>
                                <p>Liên hệ của tôi</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Categories" asp-action="Index"
                               class="nav-link @(currentController == "Categories" ? "active" : "")">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Quản lý danh mục</p>
                            </a>
                        </li>

                        <li class="nav-header text-uppercase font-weight-bold text-muted mt-3" style="font-size: 12px;">Tài khoản</li>

                        <li class="nav-item">
                            <a asp-controller="Profile" asp-action="Index"
                               class="nav-link @(currentController == "Profile" ? "active" : "")">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>Cài đặt</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 style="font-weight: 700; color: #343a40;">@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer" style="border-top: none; background: transparent;">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2025 <a href="#" style="color: #007bff;">MyContactApp</a>.</strong>
        </footer>
    </div>

    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>