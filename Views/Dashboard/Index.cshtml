@model ContactsManagement.DTOs.Dashboard.DashboardDTO

@{
    // Đảm bảo bạn đang dùng Layout của User (như đã bàn ở bước trước)
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Avatar chữ cái đầu */
    .avatar-initial {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: #e8eaf6; /* Màu nền tím rất nhạt */
        color: #3f51b5; /* Màu chữ Indigo */
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* Card tiêu đề màu Indigo */
    .card-indigo.card-outline {
        border-top: 3px solid #3f51b5;
    }

    /* Nút thêm mới to, nổi bật */
    .btn-quick-add {
        background: linear-gradient(135deg, #3f51b5 0%, #2196f3 100%);
        color: white;
        border: none;
        transition: transform 0.2s;
    }
    .btn-quick-add:hover {
        transform: translateY(-3px);
        color: white;
        box-shadow: 0 5px 15px rgba(63, 81, 181, 0.4);
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark" style="font-weight: 700;">Xin chào, quay trở lại!</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-4 col-6">
                <div class="small-box bg-indigo" style="border-radius: 15px; box-shadow: 0 5px 15px rgba(63, 81, 181, 0.2);">
                    <div class="inner">
                        <h3>@Model.TotalContact</h3>
                        <p>Tổng số liên hệ</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-address-book"></i>
                    </div>
                    <a href="/Contacts" class="small-box-footer" style="border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                        Xem tất cả <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-6">
                <div class="small-box bg-lightblue" style="border-radius: 15px; box-shadow: 0 5px 15px rgba(60, 141, 188, 0.2);">
                    <div class="inner">
                        <h3>@Model.NewContactsThisMonth</h3>
                        <p>Thêm mới tháng này</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <a href="#" class="small-box-footer" style="border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-12">
                <a href="/Contacts/Create" class="btn btn-quick-add w-100 h-100 d-flex flex-column justify-content-center align-items-center mb-3" style="border-radius: 15px; min-height: 120px;">
                    <i class="fas fa-user-plus fa-2x mb-2"></i>
                    <span style="font-size: 1.2rem; font-weight: 600;">Thêm liên hệ mới</span>
                </a>
            </div>
        </div>

    </div>
</section>