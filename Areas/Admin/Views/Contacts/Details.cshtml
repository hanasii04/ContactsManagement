@model ContactsManagement.Models.Contacts

@{
    ViewData["Title"] = "Chi tiết Liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0" style="font-weight: 700; color: #343a40;">Hồ sơ liên hệ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh bạ</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-4">
                <div class="card card-primary card-outline" style="border-top: 3px solid #20c997; border-radius: 15px; box-shadow: 0 0 20px rgba(0,0,0,0.05);">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <div style="width: 100px; height: 100px; background: linear-gradient(135deg, #20c997 0%, #087f5b 100%); color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 40px; font-weight: bold; margin: 0 auto; box-shadow: 0 5px 15px rgba(32, 201, 151, 0.4);">
                                @(Model.FullName?.Substring(0, 1).ToUpper() ?? "?")
                            </div>
                        </div>

                        <h3 class="profile-username text-center mt-3">@Model.FullName</h3>
                        <p class="text-muted text-center">Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Người quản lý</b>
                                <a class="float-right text-success" style="font-weight: 600;">
                                    @(Model.Users?.FullName ?? "Chưa gán")
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Trạng thái</b>
                                <span class="float-right badge badge-success" style="background-color: #20c997;">Hoạt động</span>
                            </li>
                        </ul>

                        <a asp-action="Index" class="btn btn-default btn-block" style="color: #666;">
                            <i class="fas fa-arrow-left mr-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>

                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 0 20px rgba(0,0,0,0.05);">
                    <div class="card-header" style="background-color: transparent; border-bottom: 1px solid #f0f0f0;">
                        <h3 class="card-title"><i class="fas fa-tags mr-1"></i> Phân loại</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.ContactCategories != null && Model.ContactCategories.Any())
                        {
                            @foreach (var cc in Model.ContactCategories)
                            {
                                // Fix lỗi: CategoryName -> Name
                                <span class="badge badge-info mr-1" style="background-color: #17a2b8; padding: 8px 12px; font-size: 14px; margin-bottom: 5px;">
                                    @cc.Categories.Name
                                </span>
                            }
                        }
                        else
                        {
                            <span class="text-muted font-italic">Chưa được phân loại vào danh mục nào.</span>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 0 20px rgba(0,0,0,0.05);">
                    <div class="card-header p-2" style="background-color: transparent; border-bottom: 1px solid #f0f0f0;">
                        <h3 class="card-title p-2" style="font-weight: 700;">Thông tin chi tiết</h3>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="settings">
                                <form class="form-horizontal">

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Email</label>
                                        <div class="col-sm-9 pt-2">
                                            <a href="mailto:@Model.Email" style="color: #087f5b; font-weight: 600;">@Model.Email</a>
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Số điện thoại</label>
                                        <div class="col-sm-9 pt-2">
                                            <a href="tel:@Model.PhoneNumber" style="font-size: 1.1rem; color: #343a40; font-weight: 500;">
                                                @Model.PhoneNumber
                                            </a>
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Địa chỉ</label>
                                        <div class="col-sm-9 pt-2">
                                            @if (!string.IsNullOrEmpty(Model.Address))
                                            {
                                                <span>@Model.Address</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted font-italic">Chưa cập nhật địa chỉ</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Ghi chú / Mô tả</label>
                                        <div class="col-sm-9 pt-2">
                                            @if (!string.IsNullOrEmpty(Model.Notes))
                                            {
                                                <p class="text-muted">@Model.Notes</p>
                                            }
                                            else
                                            {
                                                <span class="text-muted font-italic">Không có mô tả thêm.</span>
                                            }
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>