@model ContactsManagement.Helpers.PaginatedList<ContactsManagement.Models.Contacts>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentUserId = ViewData["CurrentUserId"]; // Lấy UserId nếu admin đang lọc theo user

    // Tính toán trạng thái nút phân trang
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<style>
    /* Style cho phân trang */
    .page-link {
        color: #007bff;
        border-radius: 6px !important;
        margin: 0 2px;
        border: none;
        background-color: #f4f6f9;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        box-shadow: 0 2px 4px rgba(0,123,255,0.25);
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        background-color: #fff;
        opacity: 0.6;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0" style="font-weight: 700; color: #343a40;">Danh sách liên hệ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Danh bạ</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="card" style="border-radius: 15px; box-shadow: 0 0 20px rgba(0,0,0,0.05); border: none;">

            <div class="card-header" style="background-color: transparent; border-bottom: 1px solid #f0f0f0; padding: 20px;">
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Index" method="get">
                            @if (currentUserId != null)
                            {
                                <input type="hidden" name="userId" value="@currentUserId" />
                            }
                            <div class="input-group" style="width: 500px; margin-right: auto;">
                                <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên, sđt, email..." value="@currentFilter" style="border-radius: 8px 0 0 8px; border: 1px solid #e2e8f0;">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default" style="border-radius: 0 8px 8px 0; border: 1px solid #e2e8f0; background-color: #f8f9fa;">
                                        <i class="fas fa-search text-muted"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-hover table-striped projects">
                    <thead>
                        <tr style="background-color: #f9fbfd; color: #495057;">
                            <th style="width: 1%">#</th>
                            <th style="width: 25%">Họ và Tên</th>
                            <th style="width: 15%">Số điện thoại</th>
                            <th style="width: 20%">Email</th>
                            <th style="width: 20%">Người sở hữu (User)</th>
                            <th style="width: 19%" class="text-right">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Items != null && Model.Items.Any())
                        {
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div style="width: 35px; height: 35px; background: #e0f2f1; color: #087f5b; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            @(item.FullName?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.ContactId" style="font-weight: 600; color: #343a40;">@item.FullName</a>
                                        <br />
                                        <small class="text-muted">Tạo ngày: @item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-light" style="font-size: 0.9rem;">@item.PhoneNumber</span>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (item.Users != null)
                                        {
                                            <span class="badge bg-teal" style="background-color: #20c997 !important;">
                                                <i class="fas fa-user-shield mr-1"></i> @item.Users.FullName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted font-italic">Không xác định</span>
                                        }
                                    </td>
                                    <td class="project-actions text-right">
                                        <a asp-action="Details"
                                           asp-route-id="@item.ContactId"
                                           class="btn btn-sm"
                                           style="background: linear-gradient(135deg, #20c997 0%, #087f5b 100%); color: white; border: none; border-radius: 6px; box-shadow: 0 2px 4px rgba(32, 201, 151, 0.2);"
                                           title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    <i class="fas fa-folder-open fa-3x mb-3" style="opacity: 0.3;"></i>
                                    <p>Không tìm thấy dữ liệu nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center py-3" style="border-radius: 0 0 15px 15px;">
                <div class="text-muted small">
                    Hiển thị <b>@Model.Items.Count</b> trong tổng số <b>@Model.TotalCount</b> bản ghi (Trang @Model.PageIndex / @Model.TotalPages)
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm m-0">
                            <li class="page-item @prevDisabled">
                                <a asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-searchString="@currentFilter"
                                   asp-route-userId="@currentUserId"
                                   class="page-link">
                                    <i class="fas fa-chevron-left mr-1"></i> Trước
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 1 && i <= Model.PageIndex + 1))
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a asp-action="Index"
                                           asp-route-pageNumber="@i"
                                           asp-route-searchString="@currentFilter"
                                           asp-route-userId="@currentUserId"
                                           class="page-link">@i</a>
                                    </li>
                                }
                                else if (i == Model.PageIndex - 2 || i == Model.PageIndex + 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            <li class="page-item @nextDisabled">
                                <a asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-searchString="@currentFilter"
                                   asp-route-userId="@currentUserId"
                                   class="page-link">
                                    Sau <i class="fas fa-chevron-right ml-1"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>

        </div>
    </div>
</section>